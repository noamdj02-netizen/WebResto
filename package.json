{
  "name": "webresto",
  "version": "2.0.0",
  "description": "WebResto - Solution digitale complÃ¨te pour restaurants modernes",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run minify-css && npm run minify-js",
    "minify-css": "csso style.css --output dist/style.min.css",
    "minify-js": "terser script.js --output dist/script.min.js --compress --mangle",
    "test": "jest",
    "lint": "eslint *.js",
    "format": "prettier --write *.js *.html *.css",
    "serve": "http-server . -p 3000",
    "deploy": "npm run build && npm run start"
  },
  "keywords": [
    "restaurant",
    "digital",
    "online-ordering", 
    "mobile-app",
    "saas",
    "food-tech",
    "web-application",
    "e-commerce"
  ],
  "author": {
    "name": "WebResto Team",
    "email": "contact@webresto.fr",
    "url": "https://webresto.fr"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/webresto/webresto.git"
  },
  "bugs": {
    "url": "https://github.com/webresto/webresto/issues"
  },
  "homepage": "https://webresto.fr",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "jest": "^29.7.0",
    "csso-cli": "^4.0.2",
    "terser": "^5.26.0",
    "http-server": "^14.1.1",
    "@eslint/js": "^8.56.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "script.js",
      "!node_modules/**",
      "!dist/**"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "semi": ["error", "always"],
      "quotes": ["error", "single"]
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false
  }
}